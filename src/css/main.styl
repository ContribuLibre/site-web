bleuLogo=#2a7fff //2299ff 22ccff
orangeLogo=#ff7f2a //ff9922 ffbb22
bleuLogoFiligrane=#e1ecff //e1f1ff e1f8ff
orangeLogoFiligrane=#ffede1 //fff1e1 fff6e1
colorButton=bleuLogo
colorShadow=rgba(0, 0, 0, 0.3)
colorInset=rgba(0, 0, 0, 0.5)
colorDarkText=#444
colorFg1=orangeLogo
colorBg1=white
colorFg2=#6FF
colorBg2=white
colorFgAux=#eee
colorBgAux=linear-gradient(#555, #333)


*
	margin 0
	padding 0
	border 0
	box-sizing border-box
	font-family sans-serif
	color colorDarkText

h2
	line-height 50px
	color colorFg1
	text-align center

.button
	display block
	font-weight bold
	text-align center
	color white
	background colorButton
	border-radius 5px
	margin 20px auto
	padding 20px
	width 40%
	transition all 0.6s
	&:hover
		background darken(colorButton, 10)
		box-shadow 1px 1px 8px colorShadow
	&:active
		background lighten(orangeLogo, 0) //darken(colorButton, 30)
		box-shadow inset 1px 1px 8px colorInset


[title]
	border-bottom 1px dotted orangeLogo

#menuPrincipal
	position fixed
	display flex
	flex-flow row nowrap
	justify-content space-between
	padding 25px
	width 100%
	background colorBgAux

	a
		text-decoration none
		color colorFgAux

#accueil
	background linear-gradient(#dff, #ffd)
	height calc(100vh - 50px)
	position relative

#splashScreen
	display flex
	width 66%
	height 100%
	text-align center
	flex-direction column
	justify-content center
	img
		max-width 60%
	h2
		padding-top 5vh
		color colorDarkText

aside
	position absolute
	z-index 1
	bottom 0
	right 0
	width 33%
	padding 50px
	padding-bottom 20px
	line-height 20px
	text-align center
	border-top-left-radius 50px
	box-shadow 0 0 50px 0 colorShadow
	background rgba(255, 255, 255, 0.9)
	*
		text-align left
	.button
		margin 3.5vh auto
		width auto
		display inline-block
	h3
		margin-bottom 3.5vh
		text-align center
	ul
		padding-left 30px
	li
		margin 1.75vh 0
@media (min-height: 700px) and (min-width: 1300px)
	aside
		padding-bottom 50px
		line-height 25px
		.button
			margin 1.2*3.5vh
@media (min-height: 800px) and (min-width: 1600px)
	aside
		padding-bottom 50px
		line-height 30px
		.button
			margin 1.5*3.5vh

#accueil:after
	content ''
	width 67%
	height 50px
	position absolute
	z-index 0
	box-shadow 0 0 50px 0 colorShadow
#roles
	z-index 2
	position relative
	background white
